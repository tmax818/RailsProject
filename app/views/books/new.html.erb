<%= provide(:title, "New Book") %>

<h1>New Book</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @book do |f| %>

      <%= render 'layouts/shared/error_messages', holder: @book %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :author %>
    <%= f.text_field :author %>

    <%= f.label :genre %>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>

    <%= f.submit "Create Book", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
