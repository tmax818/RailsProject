<% if user.errors.any? %>
<div class="error_explaination">
  <div class="alert alert-danger">
    The form contains <%= pluralize(user.errors.count, "error") %>:

    <ul>
      <% user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
</div>
  </div>
<%end %>
