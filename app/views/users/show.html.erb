<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= link_to "Your Books", user_books_path(@user), class: "btn btn-sm btn-primary"%>
      <%= link_to "Add Book", new_user_book_path(@user), class: "btn btn-sm btn-primary" %>
      <%= link_to "Add Review", '#', class: "btn btn-sm btn-primary" %>
  </aside>
</div>
