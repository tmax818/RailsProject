<h1>Review Index</h1>

<% @reviews.each do |review| %>
  <div class="row">
    <div class="col-md-2">
      <section class="center">
        <%= gravatar_for(review.user, size: 120) %>
      </section>
    </div>
    <div class="col-md-8 well">
      <h4><%= link_to "review show page", review_path(review) %></h4>
      <p><%= review.content %></p>
      <p><span class="quiet"><small>Created<%= time_ago_in_words(review.created_at)%>
        ago</small></span></p>
    </div>
  </div>
<% end %>
<br>
  <%= render 'layouts/shared/links' %>
